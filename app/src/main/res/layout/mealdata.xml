<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="#7AA24C"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/foodname_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/recipekorea"
                    android:gravity="center"
                    android:text="이름"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="156"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"

                android:elevation="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/kcal_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/recipekorea"
                    android:gravity="right"
                    android:text="kcal"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/carbo_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/recipekorea"
                    android:gravity="right"
                    android:text="g"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/protein_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/recipekorea"
                    android:gravity="right"
                    android:text="g"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fat_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/recipekorea"
                    android:gravity="right"
                    android:text="g"
                    android:textSize="18sp" />


            </LinearLayout>

            <Button
                android:layout_marginRight="10dp"
                android:id="@+id/deleteButton"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:text="X" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>